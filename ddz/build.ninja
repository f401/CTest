CXX = g++

CXX_FLAGS = -O2 -g
LD_FLAGS = 
RM = rm -f
rule cxx
  command = $CXX $CXX_FLAGS -o $out -c $in 
  description=$CXX $out

rule link
  command = $CXX $LD_FLAGS -o $out $in
  description = Link $out

build Card.o: cxx src/Card.cpp
build main.o: cxx src/main.cpp
build CardGroup.o: cxx src/CardGroup.cpp
build main: link Card.o main.o CardGroup.o
default main
